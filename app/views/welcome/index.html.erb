    <div id="map"></div>
</div>

<img id="logo" src="tw_logo_black.png">

<script type="text/javascript" charset="utf-8">
    handler = Gmaps.build('Google');
    handler.buildMap({
        provider: {},
        internal: {
            id: 'map'
        }
    }, function () {
        markers = handler.addMarkers([
            {
                "lat": 12.9716,
                "lng": 77.5946
            },
            {
              "lat": 12.9166,
                "lng": 77.6101
            }
        ]);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
    });
</script>
